- title @post.title

.command
  = link_to 'Share', new_post_path, :class => 'share-button'
  - if can? :update, @post
    = link_to 'Edit', edit_post_path(@post)

%h2= @post.title

.post
  .vote-info= render_cell :vote, :show, @post, current_user
  .post-info
    %p
      = @post.user_avatar
      Posted by
      = @post.user_link
      on
      = @post.created_date
    .description
      .point-to-icon
      %p= @post.description
    = render 'shared/addthis'
    .wikistyle= raw @post.cached_formatted_html
    = @post.implemented_icon
    .tags= @post.tag_links
    = render_cell :post, :related, @post
    = render 'shared/addthis'
    - if Rails.env.production?
      .adsense= render 'shared/google_adsense'

    = render 'comments/comments', :parent => @post
    = render 'comments/comment_form', {:parent => @post, :comment => @comment}

- content_for :js do
  = javascript_include_tag "http://s7.addthis.com/js/250/addthis_widget.js#username=flyerhzm"
