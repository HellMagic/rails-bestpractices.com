%table.posts
  - votes.each do |vote|
    %tr
      %td.stat
        - if vote.like?
          .like-icon.active Like
        - else
          .dislike-icon.active Dislike
      %td.content
        %p.title= link_to vote.voteable_name, voteable_link(vote)
      %td.author
        by
        = link_to vote.cached_voteable.cached_user.login, user_path(vote.cached_voteable.cached_user)
      %td.avatar= image_tag vote.cached_voteable.cached_user.gravatar_url(:size => 32, :default => 'mm'), :class => 'user-avatar', :alt => vote.cached_voteable.cached_user.login
