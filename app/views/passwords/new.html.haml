- set_meta_tags :title => 'Reset password', :noindex => true

%h2 Forgot your password?
= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |form|
  = form.inputs do
    = form.input :email
  = form.actions do
    = form.submit "Send me reset password instructions"
