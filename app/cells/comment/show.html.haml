.comments
  %a{:name => 'comments'}
  %h3 Comments
  - @comments.each do |comment|
    - unless comment.new_record?
      .comment
        %p.info
          = render_cell :avatar, :show, comment.cached_user
          Posted by
          - if comment.cached_user
            = link_to comment.cached_user.login, user_path(comment.cached_user)
          - else
            = comment.username
          on
          = l comment.created_at
        .content
          .point-to-icon
          .wikistyle= sanitize(simple_format(comment.body, :sanitize => false), :tags => %w(a b blockquote pre code em i strong), :attributes => %w(title href))
